{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"#client/*": ["./src/client/*"],
			"#server/*": ["./src/server/*"],
			"#types/*": ["./src/types/*"]
		}
	},
	"include": ["src/**/*.ts"]
}